<% @news_posts.each do |news_post| %>
	<div class="row">
		<div class="col-lg-12">
			<article>
				<!-- Title -->
				<h1><%= news_post.newspsttitle %></h1>

				<!-- Author (Next Release)
				<p class="lead">
					by <a href="#">Authour</a>
				</p>
				 -->

				<!-- Date -->
				<hr>
				<p>
					<span class="fa fa-calendar"></span> Posted on <%= news_post.created_at %>
				</p>
				<hr>

				<p><%= news_post.newspsttext %></p>
			</article>
		</div>
	</div>
<% end %>
